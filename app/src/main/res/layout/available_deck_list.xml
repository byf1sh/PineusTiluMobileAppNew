<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_anchorGravity="center"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/deck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageButton
            android:id="@+id/availabledeck"
            android:layout_width="300dp"
            android:layout_height="128dp"
            android:background="@drawable/availabledeck"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/deck_color"
            android:layout_width="300dp"
            android:layout_height="98dp"
            android:layout_marginBottom="34dp"
            android:src="@drawable/deck_color"
            app:layout_constraintTop_toTopOf="@id/availabledeck"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/pic_deck"
            android:layout_width="300dp"
            android:layout_height="92dp"
            android:background="@drawable/fotodeklist_availdecklist"
            app:layout_constraintStart_toStartOf="@id/deck_color"
            app:layout_constraintTop_toTopOf="@id/deck_color" />

        <TextView
            android:id="@+id/title_deck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/raleway_bold"
            android:text="No deck"
            android:textColor="@color/putih"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/pic_deck"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/avail_deck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Harga"
            android:textColor="@color/hijau"
            android:textSize="14sp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>