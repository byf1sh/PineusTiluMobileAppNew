<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileSettingsActivity"
    android:background="@drawable/bgsettingwindow">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnName"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@color/putih"
        android:drawableLeft="@drawable/profileicon_activityprofile"
        android:textColor="@color/abu"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Name"
        android:textStyle="bold"
        android:layout_marginStart="55dp"
        android:layout_marginTop="-50dp"
        app:layout_constraintTop_toBottomOf="@id/btnName"
        app:layout_constraintStart_toStartOf="@id/btnName"
        />
    <TextView
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Change : xx/xx/xx"
        android:textColor="@color/abu"
        android:layout_marginStart="55dp"
        android:layout_marginTop="-30dp"
        app:layout_constraintTop_toBottomOf="@id/btnName"
        app:layout_constraintStart_toStartOf="@id/btnName"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clPassword"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@color/putih"
        android:drawableLeft="@drawable/homeicon_activityprofile"
        android:padding="16dp"
        android:textAlignment="viewStart"
        android:textColor="@color/abu"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textStyle="bold"
        android:layout_marginStart="55dp"
        android:layout_marginTop="-50dp"
        app:layout_constraintTop_toBottomOf="@id/clPassword"
        app:layout_constraintStart_toStartOf="@id/clPassword"
        />
    <TextView
        android:id="@+id/editPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jalan Mars Dirgahayu no.28"
        android:textColor="@color/abu"
        android:textStyle=""
        android:layout_marginStart="55dp"
        android:layout_marginTop="-30dp"
        app:layout_constraintTop_toBottomOf="@id/clPassword"
        app:layout_constraintStart_toStartOf="@id/clPassword"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnnumber"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@color/putih"
        android:drawableLeft="@drawable/dial_icon"
        android:padding="16dp"
        android:textAlignment="viewStart"
        android:textColor="@color/abu"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Contact Number"
        android:textStyle="bold"
        android:layout_marginStart="55dp"
        android:layout_marginTop="-50dp"
        app:layout_constraintTop_toBottomOf="@id/btnnumber"
        app:layout_constraintStart_toStartOf="@id/btnnumber"
        />
    <TextView
        android:id="@+id/editContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+62 82215437001"
        android:textColor="@color/abu"
        android:layout_marginStart="55dp"
        android:layout_marginTop="-30dp"
        app:layout_constraintTop_toBottomOf="@id/btnnumber"
        app:layout_constraintStart_toStartOf="@id/btnnumber"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clemail"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@color/putih"
        android:drawableLeft="@drawable/customer_icon"
        android:padding="16dp"
        android:textAlignment="viewStart"
        android:textColor="@color/abu"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnnumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Email"
        android:textStyle="bold"
        android:layout_marginStart="55dp"
        android:layout_marginTop="-50dp"
        app:layout_constraintTop_toBottomOf="@id/clemail"
        app:layout_constraintStart_toStartOf="@id/clemail"
        />
    <TextView
        android:id="@+id/editEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rxmys@outlook.com"
        android:textColor="@color/abu"
        android:layout_marginStart="55dp"
        android:layout_marginTop="-30dp"
        app:layout_constraintTop_toBottomOf="@id/clemail"
        app:layout_constraintStart_toStartOf="@id/clemail"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/buttonshape"
        android:id="@+id/btncustomersupport"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/putih"
        android:drawableLeft="@drawable/customer_icon"
        android:padding="16dp"
        android:textAlignment="viewStart"
        android:textColor="@color/abu"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clemail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Support"
        android:textStyle="bold"
        android:layout_marginStart="55dp"
        android:layout_marginTop="-40dp"
        app:layout_constraintTop_toBottomOf="@id/btncustomersupport"
        app:layout_constraintStart_toStartOf="@id/btncustomersupport"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/abu"
        android:layout_marginStart="55dp"
        android:layout_marginTop="-30dp"
        app:layout_constraintTop_toBottomOf="@id/btncustomersupport"
        app:layout_constraintStart_toStartOf="@id/btncustomersupport"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/buttonshape"
        android:id="@+id/btnFAQ"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/putih"
        android:drawableLeft="@drawable/faq_icon"
        android:padding="16dp"
        android:textAlignment="viewStart"
        android:textColor="@color/abu"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btncustomersupport" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:text="FAQ"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnFAQ"
        app:layout_constraintStart_toStartOf="@id/btnFAQ"
        app:layout_constraintTop_toTopOf="@+id/btnFAQ" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/abu"
        android:layout_marginStart="55dp"
        android:layout_marginTop="-30dp"
        app:layout_constraintTop_toBottomOf="@id/btnFAQ"
        app:layout_constraintStart_toStartOf="@id/btnFAQ"
        />

    <Button
        android:id="@+id/btnsignout"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="184dp"
        android:elevation="6dp"
        android:text="Sign Out"
        android:backgroundTint="@color/putih"
        android:padding="16dp"
        android:textAlignment="center"
        android:textColor="@color/merah2"
        android:layout_marginBottom="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>