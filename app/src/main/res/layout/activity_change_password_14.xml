<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePassword14Activity">

    <ImageView
        android:id="@+id/buttonback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/back_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:src="@drawable/bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginTop="150dp"
            />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:text="Forgot Paswword"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginStart="80dp"/>

    <TextView
        android:id="@+id/header_changepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:layout_marginTop="130dp"
        android:text="Please enter a new password."
        android:textAlignment="center"
        android:textColor="@color/hitam"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/header2_changepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:layout_marginTop="150dp"
        android:text="Make sure you remember the new password \nand don't give it to anyone else."
        android:textAlignment="center"
        android:textColor="@color/abu"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="280dp"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.389"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header2_changepassword"
        app:layout_constraintVertical_bias="0.013">

        <EditText
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/white_bg"
            android:elevation="6dp"
            android:fontFamily="@font/raleway"
            android:hint="New Password"
            android:paddingLeft="10dp"
            android:textColorHint="@color/abu"
            android:textSize="12sp" />
        <EditText
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/white_bg"
            android:elevation="6dp"
            android:fontFamily="@font/raleway"
            android:hint="Enter New Password Again"
            android:paddingLeft="10dp"
            android:textColorHint="@color/abu"
            android:textSize="12sp" />

    </LinearLayout>


    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonnext"
        android:backgroundTint="@color/hijau"
        android:text="Next"
        android:fontFamily="@font/raleway"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"/>

    <ImageView
        android:id="@+id/pineustilulogo2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="400dp"
        android:src="@drawable/pineustilulogo2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>