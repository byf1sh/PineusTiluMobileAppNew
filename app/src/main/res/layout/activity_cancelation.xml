<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_reschedule"
    tools:context=".CancelationActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="31dp"
        app:cardElevation="8dp">

        <TextView
            android:id="@+id/reschedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESCHEDULE AND CANCELLATION POLICY"
            android:fontFamily="@font/ralewaybold"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="9dp"
            android:layout_marginStart="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(khusus yang sudah mendapatkan slot)"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:fontFamily="@font/raleway"
            android:layout_marginTop="26dp"
            android:layout_marginStart="50dp"/>

        <ImageView
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:background="@drawable/bellpin_reschedule"
            android:layout_marginTop="9dp"
            android:layout_marginStart="7dp"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/policy"
        android:layout_width="170dp"
        android:layout_height="210dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="140dp"
        android:backgroundTint="@color/krem"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toStartOf="@+id/cardView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/reschedulepolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/item"
            android:fontFamily="@font/ralewaybold"
            android:text="Reschedule Policy"
            android:textSize="17sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/kotakpink5"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/cekbokabu_reschedule">

            <ImageView
                android:id="@+id/centang5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="7sp"
                android:src="@drawable/baseline_check_24"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="69dp"
            android:text="Before H-7 free"
            android:textSize="15sp" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/kotakpink6"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/cekbokabu_reschedule">

            <ImageView
                android:id="@+id/centang6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="7sp"
                android:src="@drawable/baseline_check_24"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="100dp"
            android:text="H-7 to H-3 150k"
            android:textSize="15sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/kotakpink7"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/cekbokabu_reschedule">

            <ImageView
                android:id="@+id/centang7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="7sp"
                android:src="@drawable/baseline_check_24"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="130dp"
            android:text="H-2 to H-1 250K"
            android:textSize="15sp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="170dp"
        android:layout_height="210dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@color/youngred"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/booking_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/cancelationpolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/item"
            android:fontFamily="@font/ralewaybold"
            android:text="Cancellation Policy"
            android:textSize="16sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/kotakpink1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="55dp"
            android:background="@drawable/cekbokabu_reschedule">

            <ImageView
                android:id="@+id/centang1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="7sp"
                android:src="@drawable/round_check_24"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="55dp"
            android:text="Before H-7 cut 25%"
            android:textSize="14sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/kotakpink2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="85dp"
            android:background="@drawable/cekbokabu_reschedule">

            <ImageView
                android:id="@+id/centang2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="7sp"
                android:src="@drawable/baseline_check_24"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="85dp"
            android:text="H-7 to H-4 cut 50%"
            android:textSize="14sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/kotakpink3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="115dp"
            android:background="@drawable/cekbokabu_reschedule">

            <ImageView
                android:id="@+id/centang3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="7sp"
                android:src="@drawable/baseline_check_24"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="115dp"
            android:text="H-3 to H-2 cut 75%"
            android:textSize="14sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/kotakpink4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="145dp"
            android:background="@drawable/cekbokabu_reschedule">

            <ImageView
                android:id="@+id/centang4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="7sp"
                android:src="@drawable/baseline_check_24"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="145dp"
            android:text="H-1 to H cut 100%"
            android:textSize="14sp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/booking_detail"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginBottom="100dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/policy">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="128dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/raleway"
            android:text="Booking Details"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/raleway"
            android:text="Purchased On"
            android:textColor="@color/abu"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="126dp"
            android:fontFamily="@font/raleway"
            android:text="Payment Method"
            android:textColor="@color/abu"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="162dp"
            android:fontFamily="@font/raleway"
            android:text="Price Detail"
            android:textColor="@color/abu"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="198dp"
            android:fontFamily="@font/raleway"
            android:text="Location"
            android:textColor="@color/abu"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/checklist">

        </ImageView>

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="198dp"
            android:fontFamily="@font/raleway"
            android:text="Location"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/price_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="162dp"
            android:fontFamily="@font/raleway"
            android:text="Rp.xxx,xxx,xx"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="126dp"
            android:fontFamily="@font/raleway"
            android:text="QRIS"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/purchased_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/raleway"
            android:text="Hari,Tgl/bln/thn "
            android:textColor="@color/black"
            android:textSize="16sp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/kmbl"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/stj"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/booking_detail"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/kmbl_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ralewaybold"
            android:paddingStart="50dp"
            android:text="Kembali"
            android:textSize="15sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/stj"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="@color/green"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/booking_detail"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/stj_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/ralewaybold"
            android:paddingStart="50dp"
            android:paddingLeft="50dp"
            android:text="Setuju"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>